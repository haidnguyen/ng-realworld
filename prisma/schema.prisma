// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int       @id @default(autoincrement())
  email        String    @unique
  username     String
  bio          String    @default("")
  image        String?
  password     String
  refreshToken String?
  Article      Article[]
}

model Article {
  id        Int      @id @default(autoincrement())
  slug      String   @unique
  title     String
  body      String
  tagList   String[]
  createdAt DateTime
  updatedAt DateTime
  author    User     @relation(fields: [userId], references: [id])
  userId    Int
}
